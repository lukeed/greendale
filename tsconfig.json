{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2020"],
    "target": "es2020",
    "alwaysStrict": true,
    "removeComments": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "esnext",
    "noEmit": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
